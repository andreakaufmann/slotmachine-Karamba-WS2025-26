<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<BorderPane
        stylesheets="@/css/main.css"
        xmlns="http://javafx.com/javafx/17.0.12"
        xmlns:fx="http://javafx.com/fxml/1"
        style="-fx-background-color: linear-gradient(#e7d9b5, #cdb77a);-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.28), 18, 0.28, 0, 0);">


<top>
        <VBox>
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <HBox
                    alignment="TOP_LEFT">
            <Label text="K A R A M B A"
                   style="-fx-font-size: 30px;-fx-font-weight: bold;-fx-text-fill: linear-gradient(#fff7c2, #d4af37, #8c6f1f)"/>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox>
            <HBox
                    alignment="CENTER">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>

                <Label
                        text="OH NEIN! Ihnen sind die Credits ausgegangen. Sie haben die maximale Spinanzahl erreicht."
                        style="-fx-font-size: 25px; -fx-font-weight: bold"
                        textAlignment="CENTER"
                        wrapText="true"
                        maxWidth="400"/>
            </HBox>

        </VBox>
    </center>

    <bottom>
        <VBox
                alignment="CENTER">
            <HBox
                    alignment="CENTER"
                    spacing="50">
                <padding>
                    <Insets top="20" right="40" bottom="30" left="40">
                    </Insets>
                </padding>

                <Button
                        fx:id="newGameButton"
                        text="Neues Spiel"
                        style="-fx-font-size:18px"
                        prefWidth="160"
                        prefHeight="40">
                </Button>

                <Button
                        fx:id="endGameButton"
                        text="Spiel beenden"
                        style="-fx-font-size:18px"
                        prefWidth="160"
                        prefHeight="40">
                </Button>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>