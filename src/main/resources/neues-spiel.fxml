<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane
        style="-fx-background-image: url('/background/background.png');-fx-background-size: cover;-fx-background-position: center;-fx-background-repeat: no-repeat;"
        stylesheets="@/css/main.css"
        xmlns="http://javafx.com/javafx/17.0.12"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="controllers.NeuesSpielController">

<top>
        <BorderPane>
            <right>
                <HBox
                        alignment="TOP_RIGHT">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>

                    <Button
                            fx:id="endGameButton"
                            prefHeight="35"
                            prefWidth="110"
                            style="-fx-font-size:14px"
                            text="%button.endGame"
                            onAction="#endGame">
                    </Button>
                </HBox>
            </right>

            <left>
                <HBox
                        alignment="TOP_LEFT">
                    <padding>
                        <Insets bottom="15" left="15" right="15" top="15" />
                    </padding>

                    <Label
                            style="-fx-font-size: 30px;-fx-font-weight: bold;-fx-text-fill: linear-gradient(#fff7c2, #d4af37, #8c6f1f)"
                            text="K A R A M B A" />

                </HBox>
            </left>
        </BorderPane>
    </top>

    <center>
        <VBox
                alignment="CENTER"
                spacing="20">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <Label
                    style="-fx-font-size: 18px;-fx-text-weight: bold"
                    text="%label.startCredit" />

            <TextField
                    fx:id="rightCreditValue"
                    maxWidth="200"
                    prefHeight="40.0"
                    prefWidth="200.0"
                    promptText="%prompt.startCredit"/>

            <Button
                    fx:id="startGameButton"
                    prefHeight="40"
                    prefWidth="160"
                    style="-fx-font-size:18px"
                    text="%button.startGame"
                    onAction="#startGame"/>
            <Button
                    fx:id="gameInstructionsButton"
                    prefHeight="35"
                    prefWidth="110"
                    style="-fx-font-size:14px"
                    text="%instructions"
                    onAction="#gameInstruction">
            </Button>
        </VBox>
    </center>
</BorderPane>
