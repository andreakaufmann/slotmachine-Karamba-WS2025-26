<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml/1"
        stylesheets="@/css/main.css"
        style="-fx-background-color: linear-gradient(#e7d9b5, #cdb77a);-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.28), 18, 0.28, 0, 0);">

    <VBox
            alignment="CENTER"
            spacing="18"
            maxWidth="650">

        <padding>
            <Insets top="25" right="25" bottom="25" left="25"/>
        </padding>

        <Label
                text="SPIELANALYSE"
                style="
           -fx-text-fill: linear-gradient(#fff7c2, #d4af37);
           -fx-font-size: 22;
           -fx-font-weight: bold;
           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 8, 0.5, 0, 0);
       "/>

        <VBox
                spacing="10"
                alignment="CENTER">

            <HBox
                    alignment="CENTER"
                    spacing="10">
                <Label
                        text="Spins gesamt:"/>
                <Label
                        fx:id="spinsGesamtLabel"/>
            </HBox>

            <HBox
                    alignment="CENTER"
                    spacing="10">
                <Label
                        text="Einsatz gesamt:"/>
                <Label
                        fx:id="einsatzGesamtLabel"/>
            </HBox>

            <HBox
                    alignment="CENTER"
                    spacing="10">
                <Label
                        text="Gewinn gesamt:"/>

                <Label
                        fx:id="gewinnGesamtLabel"/>
            </HBox>

            <HBox
                    alignment="CENTER"
                    spacing="10">

                <Label
                        fx:id="nettoLabel"/>
            </HBox>
        </VBox>

        <Label
                text="Letzte Spins"/>

        <ListView
                fx:id="letzteSpinsList"
                  prefHeight="180"/>

        <HBox
                spacing="18"
                alignment="CENTER">

            <Button fx:id="resetButton"
                    text="Zurücksetzen"
                    prefHeight="35"
                    prefWidth="110"
                    style="-fx-font-size:14px"/>

            <Button fx:id="closeButton"
                    text="Schließen"
                    prefHeight="35"
                    prefWidth="110"
                    style="-fx-font-size:14px"/>
        </HBox>

    </VBox>
</StackPane>
