<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<BorderPane
        stylesheets="@/css/main.css"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml/1"
        style="-fx-background-image: url('/background/background.png');-fx-background-size: cover;-fx-background-position: center;-fx-background-repeat: no-repeat;"
        fx:controller="controllers.StartFensterController">

<top>
        <HBox alignment="TOP_RIGHT">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Button
                    fx:id="endGameButton"
                    text="%button.endGame"
                    style="-fx-font-size:14px"
                    prefWidth="110"
                    prefHeight="35"
                    onAction="#endGame"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label
                    text="K A R A M B A"
                    style="-fx-font-size: 70px;-fx-font-weight: bold;-fx-text-fill: linear-gradient(#fff7c2, #d4af37, #8c6f1f)"/>

            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <Button
                    fx:id="newGameButton"
                    text="%button.newGame"
                    style="-fx-font-size:18px"
                    prefWidth="160"
                    prefHeight="40"
                    onAction="#newGame"/>

            <Button
                    fx:id="languageButton"
                    text="%button.languages"
                    style="-fx-font-size:18px"
                    prefWidth="160"
                    prefHeight="40"
                    onAction="#languages"/>

            <Button
                    fx:id="aboutButton"
                    text="%button.about"
                    style="-fx-font-size:18px"
                    prefWidth="160"
                    prefHeight="40"
                    onAction="#aboutGame"/>
        </VBox>
    </center>
</BorderPane>
