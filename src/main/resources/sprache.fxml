<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<StackPane
        stylesheets="@/css/main.css"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml/1"
        style="-fx-background-color: linear-gradient(#e7d9b5, #cdb77a);-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.28), 18, 0.28, 0, 0);"
        fx:controller="controllers.LanguageController">

    <VBox
            alignment="CENTER"
            spacing="50"
            prefWidth="500"
            prefHeight="500"
            style="-fx-background-radius: 13;-fx-border-radius: 13">

        <padding>
            <Insets top="30" right="40" bottom="30" left="40">
            </Insets>
        </padding>

        <Label
                text="%language.choose"
                style="-fx-font-size: 25px;"
                textAlignment="CENTER"
                wrapText="true"
                maxWidth="600">
        </Label>

        <VBox alignment="CENTER"
        spacing="15">

            <Button
                    fx:id="germanButton"
                    text="%language.german"
                    style="-fx-font-size:20px"
                    prefWidth="160"
                    prefHeight="40"
                    defaultButton="true"
                    onAction="#germanVersion">
            </Button>

            <Button
                    fx:id="englishButton"
                    text="%language.english"
                    style="-fx-font-size:20px"
                    prefWidth="160"
                    prefHeight="40"
                    onAction="#englishVersion">
            </Button>

            <Button
                    fx:id="exitLanguages"
                    text="%button.close"
                    style="-fx-font-size: 14px"
                    prefWidth="110"
                    prefHeight="35"
                    onAction="#exit">
            </Button>
        </VBox>
    </VBox>
</StackPane>