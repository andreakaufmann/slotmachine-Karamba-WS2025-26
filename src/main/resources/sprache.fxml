<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>

<StackPane
        stylesheets="@/css/main.css"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml/1"
        style="-fx-background-color: linear-gradient(#e7d9b5, #cdb77a);-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.28), 18, 0.28, 0, 0);">

    <VBox
            alignment="CENTER"
            spacing="50"
            maxWidth="500"
            maxHeight="500"
            style="-fx-background-radius: 13;-fx-border-radius: 13px">

        <padding>
            <Insets top="30" right="40" bottom="30" left="40">
            </Insets>
        </padding>

        <Label
                text="Wählen Sie Ihre gewünschte Sprache:"
                style="-fx-font-size: 25px;"
                textAlignment="CENTER"
                wrapText="true"
                maxWidth="600">
        </Label>

        <GridPane
                alignment="CENTER"
                vgap="20">

            <Button
                    fx:id="germanButton"
                    text="Deutsch"
                    style="-fx-font-size:20px"
                    prefWidth="160"
                    prefHeight="40"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="0">
            </Button>

            <Button
                    fx:id="englishButton"
                    text="Englisch"
                    style="-fx-font-size:20px"
                    prefWidth="160"
                    prefHeight="40"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="1">
            </Button>

            <Button
                    fx:id="exitLanguages"
                    text="Deutsch"
                    style="-fx-font-size:20px"
                    prefWidth="160"
                    prefHeight="40"
                    GridPane.columnIndex="0"
                    GridPane.rowIndex="0">
            </Button>

        </GridPane>
    </VBox>
</StackPane>