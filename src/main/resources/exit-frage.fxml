<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<StackPane
        stylesheets="@/css/main.css"
        xmlns="http://javafx.com/javafx/17.0.12"
        xmlns:fx="http://javafx.com/fxml/1"
        style="-fx-background-color: linear-gradient(#e7d9b5, #cdb77a);-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.28), 18, 0.28, 0, 0);"
        fx:controller="controllers.ExitFrageController">

    <VBox
            alignment="CENTER"
            spacing="50"
            maxWidth="500"
            maxHeight="500"
            style="-fx-background-radius: 13;-fx-border-radius: 13">

        <padding>
            <Insets top="30" right="40" bottom="30" left="40">
            </Insets>
        </padding>

        <Label
                text="%exit.question"
                style="-fx-font-size: 25px;"
                textAlignment="CENTER"
                wrapText="true"
                maxWidth="370">
        </Label>

        <HBox
                alignment="CENTER"
                spacing="50">

            <Button
                    fx:id="yesExitButton"
                    text="%button.yes"
                    style="-fx-background-color: green;-fx-font-size: 20px"
                    prefWidth="160"
                    prefHeight="40"
                    onAction="#endGame">
            </Button>

            <Button
                    fx:id="noExitButton"
                    text="%button.no"
                    style="-fx-background-color: darkred;-fx-font-size: 20px"
                    prefWidth="160"
                    prefHeight="40"
                    onAction="#moveForward">
            </Button>
        </HBox>
    </VBox>
</StackPane>