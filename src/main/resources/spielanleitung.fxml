<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane
        stylesheets="@/css/main.css"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml/1"
        style="-fx-background-color: linear-gradient(#e7d9b5, #cdb77a);-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.28), 18, 0.28, 0, 0);"
        fx:controller="controllers.AnleitungController">

<center>
        <VBox
                alignment="CENTER"
                spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="%instructions.title"
                   style="-fx-font-size: 50px;-fx-font-weight: bold;-fx-text-fill: black"/>
            <Label
                    text="%instructions.text"
                    wrapText="true"
                    style="-fx-font-size: 12px;-fx-text-fill: black"/>

            <Button
                    fx:id="exitAboutButton"
                    text="%button.close"
                    prefHeight="35"
                    prefWidth="110"
                    style="-fx-font-size:14px"
                    onAction="#exit">
            </Button>
        </VBox>
    </center>
</BorderPane>