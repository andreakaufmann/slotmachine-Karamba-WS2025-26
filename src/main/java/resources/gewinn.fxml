<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml/1">

    <center>
        <VBox
                alignment="CENTER"
                spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>


            <Label text="! G E W I N N !"
                   style="-fx-font-size: 70px;-fx-font-weight: bold;-fx-text-fill: linear-gradient(#fff7c2, #d4af37, #8c6f1f)"/>

            <Label fx:id="winAmount"
                   style="-fx-font-size: 60px;-fx-font-weight: bold;-fx-text-fill: linear-gradient(#fff7c2, #d4af37, #8c6f1f)"/>
        </VBox>
    </center>
</BorderPane>
