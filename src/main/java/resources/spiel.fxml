<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextField?>

<BorderPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml/1">

    <top>
        <BorderPane>
            <right>
                <HBox
                        alignment="TOP_RIGHT">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>

                    <Button
                            fx:id="endGameButton"
                            text="Spiel beenden"
                            style="-fx-border-color: #8c6f1f;-fx-border-width:2;-fx-background-radius: 13;-fx-border-radius: 13; -fx-font-size:14px;-fx-text-fill: linear-gradient(#fff7c2, #d4af37, #8c6f1f)"
                            prefWidth="110"
                            prefHeight="35">
                    </Button>
                </HBox>
            </right>

            <left>
                <HBox
                        alignment="TOP_LEFT">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>

                    <Label text="K A R A M B A"
                           style="-fx-font-size: 30px;-fx-font-weight: bold;-fx-text-fill: linear-gradient(#fff7c2, #d4af37, #8c6f1f)"/>

                </HBox>
            </left>
        </BorderPane>
    </top>


    <center>
        <StackPane>
            <HBox alignment="CENTER"
                  maxWidth="420"
                  maxHeight="160"
                  style="-fx-border-radius: 20;-fx-border-width: 2;-fx-border-color: black;-fx-padding: 20">

                <HBox spacing="20">
                    <VBox
                            fx:id="firstBox"
                            alignment="CENTER"
                            prefWidth="90"
                            prefHeight="90"
                            style="-fx-border-radius: 20;-fx-border-width: 2;-fx-border-color: black;">
                        <Label
                                fx:id="symbol1"
                                style="-fx-font-size: 70px"/>
                    </VBox>

                    <VBox
                            fx:id="secondBox"
                            alignment="CENTER"
                            prefWidth="90"
                            prefHeight="90"
                            style="-fx-border-radius: 20;-fx-border-width: 2;-fx-border-color: black;">
                        <Label
                                fx:id="symbol2"
                                style="-fx-font-size: 70px"/>
                    </VBox>

                    <VBox
                            fx:id="thirdBox"
                            alignment="CENTER"
                            prefWidth="90"
                            prefHeight="90"
                            style="-fx-border-radius: 20; -fx-border-width: 2; -fx-border-color: black;">
                        <Label
                                fx:id="symbol3"
                                style="-fx-font-size: 70px"/>
                    </VBox>

                    <VBox
                            fx:id="fourthBox"
                            alignment="CENTER"
                            prefWidth="90"
                            prefHeight="90"
                            style="-fx-border-radius: 20; -fx-border-width: 2; -fx-border-color: black;">
                        <Label
                                fx:id="symbol4"
                                style="-fx-font-size: 70px"/>
                    </VBox>

                </HBox>
            </HBox>
        </StackPane>
    </center>


    <bottom>
        <HBox
        alignment="CENTER"
        spacing="40">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <VBox
            spacing="10">
                <Label
                    text="Guthaben:"/>
                <TextField
                    fx:id="balance"
                    editable="false"/>

                <Label
                    text="Einsatz:"/>

                <HBox
                    spacing="10">

                <Button
                    fx:id="decreaseBet"
                    text="-"/>

                <TextField
                    fx:id="betField"
                    prefWidth="70"
                    editable="false"/>

                <Button
                        fx:id="increaseBet"
                        text="+"/>
                </HBox>

            </VBox>

            <VBox
                    alignment="CENTER"
                    spacing="10">

                <Label
                       fx:id="spinsLeftLabel"/>

                <Label
                        text="GEWINN"/>

                <Label
                       fx:id="winLabel"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            </VBox>

            <VBox
                    spacing="10"
                    alignment="CENTER">

                <Button
                        fx:id="spinButton"
                        text="Drehen"
                        style="-fx-border-color: #8c6f1f;-fx-border-width:2;-fx-background-radius: 13;-fx-border-radius: 13; -fx-font-size:14px;-fx-text-fill: linear-gradient(#fff7c2, #d4af37, #8c6f1f)"
                        prefWidth="110"
                        prefHeight="35">
                </Button>

                <Label text="Auto-Spin"/>
                <HBox
                        spacing="5">

                    <Button
                            fx:id="spinTwenty"
                            text="20"
                            style="-fx-border-color: #8c6f1f;-fx-border-width:2;-fx-background-radius: 13;-fx-border-radius: 13; -fx-font-size:10px;-fx-text-fill: linear-gradient(#fff7c2, #d4af37, #8c6f1f)"
                            prefWidth="40"
                            prefHeight="30"/>

                    <Button
                            fx:id="spinFifty"
                            text="50"
                            style="-fx-border-color: #8c6f1f;-fx-border-width:2;-fx-background-radius: 13;-fx-border-radius: 13; -fx-font-size:10px;-fx-text-fill: linear-gradient(#fff7c2, #d4af37, #8c6f1f)"
                            prefWidth="40"
                            prefHeight="30"/>

                    <Button
                            fx:id="spinHundred"
                            text="100"
                            style="-fx-border-color: #8c6f1f;-fx-border-width:2;-fx-background-radius: 13;-fx-border-radius: 13; -fx-font-size:10px;-fx-text-fill: linear-gradient(#fff7c2, #d4af37, #8c6f1f)"
                            prefWidth="40"
                            prefHeight="30"/>
                </HBox>
            </VBox>

        </HBox>
    </bottom>
</BorderPane>
